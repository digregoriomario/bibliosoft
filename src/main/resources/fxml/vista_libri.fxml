<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo5.bibliosoft.controller.ControllerLibri">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <TextField fx:id="campoRicerca" prefHeight="35.0" prefWidth="300" promptText="Cerca per titolo, autore o ISBN..." />
                <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onRicerca" prefHeight="35.0" prefWidth="60.0" text="Cerca" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#onAggiungi" text="Nuovo" />
                <Button onAction="#onModifica" text="Modifica" />
                <Button onAction="#onElimina" text="Elimina" />
            </children>
        </HBox>

        <VBox VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tabellaLibri" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colonnaIsbn" prefWidth="130" text="ISBN" />
                        <TableColumn fx:id="colonnaTitolo" prefWidth="250" text="Titolo" />
                        <TableColumn fx:id="colonnaAutori" prefWidth="200" text="Autori" />
                        <TableColumn fx:id="colonnaAnno" prefWidth="80" text="Anno" />
                        <TableColumn fx:id="colonnaCopieTotali" prefWidth="80" text="Totali" />
                        <TableColumn fx:id="colonnaCopieDisponibili" prefWidth="80" text="Disp." />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>

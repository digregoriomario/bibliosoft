<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo5.bibliosoft.controller.ControllerUtenti">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <TextField fx:id="campoRicerca" prefHeight="35.0" prefWidth="300" promptText="Cerca per cognome o matricola..." />
                <Button onAction="#onRicerca" prefHeight="35.0" prefWidth="60.0" text="Cerca" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#onAggiungi" text="Nuovo" />
                <Button onAction="#onModifica" text="Modifica" />
                <Button onAction="#onStorico" text="Storico Prestiti" />
                <Button onAction="#onElimina" text="Elimina" />
            </children>
        </HBox>

        <VBox VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tabellaUtenti" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colonnaMatricola" prefWidth="100" text="Matricola" />
                        <TableColumn fx:id="colonnaCognome" prefWidth="150" text="Cognome" />
                        <TableColumn fx:id="colonnaNome" prefWidth="150" text="Nome" />
                        <TableColumn fx:id="colonnaEmail" prefWidth="200" text="Email" />
                        <TableColumn fx:id="colonnaPrestiti" prefWidth="120" text="Prestiti Attivi" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
